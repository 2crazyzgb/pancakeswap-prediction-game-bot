{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "sourceMap": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "strictNullChecks": false,
    "importsNotUsedAsValues": "error",
    "strict": true,
    "outDir": "./build",
    "types": [
      "node"
    ],
    "lib": [
      "es6"
    ],
  },
  "exclude": [
    "node_modules"
  ]
}